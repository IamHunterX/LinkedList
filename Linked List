// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

struct node{
    int val;
    struct node *ptr;
};
struct node *head=NULL;
void Insert(int n);
void Deletion();
void Reverse();
int main() {
    Insert(5);
    Insert(2);
    Insert(3);
    Deletion();
    cout<<head->val<<endl;
    return 0;
}
void Insert(int n){
    struct node *next;
    if(head==NULL){
        next = new node;
        next->val = n;
        next->ptr = NULL;
        head = next;
    }
    else{
        next = new node;
        next->val = n;
        next->ptr = head;
        head = next;
    }
    
}
void Deletion(){
    node *temp;
    if(head==NULL){
        cout<<"List is empty"<<endl;
    }
    else if(head->ptr==NULL){
        head->val = 0;
    }
    else{
        cout<<head->val;
        cout<<" is deleted"<<endl;
        temp = head;
        head = temp->ptr;
        delete(temp);
    }
}
void Reverse(){
    node *current=head;
    node *prev=0;
    node *next=head;
    if(head!=NULL){
        while(next!=NULL){
        next = next->ptr;
        current->ptr = prev;
        prev = current;
        current = next;
    }
    head = prev;
    }
    else{
        cout<<"List is empty"<<endl;
    }
    
    
}




